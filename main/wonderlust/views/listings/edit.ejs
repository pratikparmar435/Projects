<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing:</h3>
    <form
      action="/listings/<%= toEditListing._id %>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-title">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= toEditListing.title %>"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-title">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          class="form-control"
          required
        >
<%= toEditListing.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter description</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-title">Image</label>
        <input
          type="text"
          name="listing[image]"
          value="<%= toEditListing.image %>"
          id="image"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter valid image URL/LINK</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-title">Price</label>
          <input
            type="number"
            name="listing[price]"
            value="<%= toEditListing.price %>"
            id="price"
            class="form-control"
            required
          />
          <div class="valid-feedback">Great!</div>
          <div class="invalid-feedback">Please enter valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-title">Country</label>
          <input
            type="text"
            name="listing[country]"
            value="<%= toEditListing.country %>"
            class="form-control"
            id="country"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter country</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-title">Location</label>
        <input
          type="text"
          name="listing[location]"
          value="<%= toEditListing.location %>"
          id="location"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter valid location</div>
      </div>
      <button class="btn btn-dark edit-btn">Edit</button>
    </form>
  </div>
</div>
