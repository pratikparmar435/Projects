<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1>SignUp for Wanderlust</h1>
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-title">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Username Looks good!</div>
        <div class="invalid-feedback">Please enter username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-title">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Email Looks good!</div>
        <div class="invalid-feedback">Please enter email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-title">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
